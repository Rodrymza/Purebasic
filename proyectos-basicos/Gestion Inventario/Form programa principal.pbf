EndEnumeration


Procedure Openmain_window(x = 0, y = 0, width = 490, height = 500)
  OpenWindow(#main_window, x, y, width, height, "Gestion Inventario y Ventas", #PB_Window_SystemMenu | #PB_Window_ScreenCentered)
  Text_0 = TextGadget(#PB_Any, 50, 20, 170, 25, "Gestion de Inventario y Ventas")
  Text_1 = TextGadget(#PB_Any, 20, 60, 130, 25, "Funciones Generales:")
  ButtonGadget(#boton_inventario, 40, 100, 120, 30, "Gestion Inventario")
  ButtonGadget(#boton_venta, 180, 100, 120, 30, "Nueva Venta")
  ButtonGadget(#boton_categorias, 320, 100, 120, 30, "Gestion Categorias")
  Text_2 = TextGadget(#PB_Any, 20, 150, 110, 25, "Inventario General")
  ListIcon_2 = ListIconGadget(#PB_Any, 20, 190, 450, 290, "Producto", 150)
  AddGadgetColumn(ListIcon_2, 1, "Categoria", 100)
  AddGadgetColumn(ListIcon_2, 2, "Precio", 80)
  AddGadgetColumn(ListIcon_2, 3, "Stock", 70)
EndProcedure

Procedure main_window_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure


